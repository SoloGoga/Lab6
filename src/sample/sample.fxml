<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <Pane prefHeight="620.0" prefWidth="800.0">
            <children>
                <TableView fx:id="mainTable" prefHeight="466.0" prefWidth="800.0">
                    <columns>
                        <TableColumn fx:id="weatherColTbl" editable="false" prefWidth="114.28" text="Weather" />
                        <TableColumn fx:id="dateColTbl" editable="false" prefWidth="114.25" text="Date" />
                        <TableColumn fx:id="minTempColTbl" editable="false" prefWidth="114.28" text="Min temp" />
                        <TableColumn fx:id="maxTempColTbl" editable="false" prefWidth="114.28" text="Max temp" />
                        <TableColumn fx:id="currTempColTbl" editable="false" prefWidth="114.28" text="Current temp" />
                        <TableColumn fx:id="windSpdColTbl" editable="false" prefWidth="114.28" text="Wind speed" />
                        <TableColumn fx:id="airPressureColTbl" editable="false" prefWidth="114.28" text="Air pressure" />
                    </columns>
                </TableView>
                <Label layoutX="145.0" layoutY="474.0" prefHeight="40.0" prefWidth="510.0" text="Enter a day for which you want to see the weather in London: ">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label layoutX="10.0" layoutY="519.0" prefHeight="40.0" prefWidth="187.5" text="Enter year from 2014:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="yearTxt" layoutX="207.5" layoutY="519.0" prefHeight="40.0" prefWidth="187.5" />
                <Label layoutX="10.0" layoutY="566.0" prefHeight="40.0" prefWidth="187.5" text="Enter month:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="monthTxt" layoutX="207.5" layoutY="566.0" prefHeight="40.0" prefWidth="187.5" />
                <Label layoutX="405.0" layoutY="519.0" prefHeight="40.0" prefWidth="187.5" text="Enter the day: ">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="dayTxt" layoutX="602.5" layoutY="519.0" prefHeight="40.0" prefWidth="187.5" />
                <Button fx:id="getWeatherBtn" layoutX="405." layoutY="566.0" mnemonicParsing="false" onAction="#getData" prefHeight="40.0" prefWidth="385.0" text="Get weather ">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</GridPane>